# Dynamic.xyz Environment Configuration
# Copy this file to .env.local and fill in your values

# Required: Your Dynamic environment ID
# Get this from your Dynamic dashboard
NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID=your_environment_id_here

# Required: Server-side API key for session revocation and wallet unlinking
# Get this from Dynamic dashboard → Developer → API Keys
# This should NOT be exposed to the client (no NEXT_PUBLIC_ prefix)
DYNAMIC_BEARER_TOKEN=your_dynamic_api_key_here

# Optional: Number of wallets to display in the wallet list view (default: 6)
# Valid range: 5-8 wallets
NEXT_PUBLIC_NUMBER_OF_WALLETS=6

# Clerk Authentication (for External Auth)
# Get these from your Clerk dashboard: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
